<div class="container">
    <h3>Welcome to MovieFlix</h3>
    <div class="card mb-3" style="max-width: 540px;">
        {{#each movies}}
            <a href="/watch/{{this.slug}}">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{this.bannerImage}}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.desc}}</p>
                            <p class="card-text"><small class="text-muted">Type: {{this.type}}</small></p>
                        </div>
                    </div>
                </div>
            </a>
        {{/each}}
    </div>
</div>